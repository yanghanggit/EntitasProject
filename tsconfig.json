  "compilerOptions": {
      "target": "es2016",
      "module": "es6",
      "strict": false,
      "jsx": "react",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "node",
      "outDir": "./dist",
      "sourceMap": true,
      "experimentalDecorators": true
